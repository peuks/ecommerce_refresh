{% extends "base.html.twig" %}


{% block  title %}
	Edit a product
{% endblock %}

{% block body %}
	<h1>Edition/Création du Produit</h1>

	{{form_start(form)}}

	<div class="row">
		<div class="col">
			{{form_row(form.name)}}
			{{form_row(form.price)}}
			{{form_row(form.mainPicture)}}
		</div>
		<div class="col">
			{{form_row(form.category)}}
			{{form_row(form.shortDescription)}}
		</div>

	</div>
	<button type="submit" class="btn btn-primary">
		<i class="fas fa-save"></i>
		Créer le produit
	</button>

	{{form_end(form)}}

{% endblock %}
