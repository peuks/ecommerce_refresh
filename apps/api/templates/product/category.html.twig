{% extends "base.html.twig" %}

{% block  title %}
	Catégorie :
	{{ slug }}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li
			class="breadcrumb-item"><a href="{{ path('home.index')}}">Accueil</a>

		</li>

		<li class="breadcrumb-item active">
			{{category.label}}
		</li>
	</ol>

	<h1>
		Catégorie :
		{{ category.label }}


	</h1>
	<div class="row">
		{% for product in category.products %}
			<div class="col-3">
				<div class="card">
					<img src=" {{product.mainPicture}} " class="img-fluid" alt='image du produit'/>

					<div class="card-body">
						<h4 class="card-title">
							{{product.label}}
							({{product.price/100}}
							€)
						</h4>

						<span class="badge badge-info">
							{{product.category.label}}

						</span>

						<p class="card-text">
							{{product.shortDescription}}

						</p>
						{# <pre>
							{{ dump(product) }}
						</pre> #}
						<a href="
							{{ path('product_show',
								{
									'category_slug':product.category.slug,
									'slug':product.slug})
								}}
								" class="btn btn-primary btn-sm">
							Détails
						</a>
					
						<a href="
							{# {{path('cart.add',{'id':product.id})}} #}
						" class="btn btn-success btn-sm">
							Ajouter
						</a>

					</div>
				</div>
			</div>

		{% endfor %}
	</div>
{% endblock %}
