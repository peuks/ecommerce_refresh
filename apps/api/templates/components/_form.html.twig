{% extends 'base.html.twig' %}

{% block title  %}
	
	{% if app.request.attributes.get('_route') == 'category_create' %}
			Création d'une catégorie
	{% elseif app.request.attributes.get('_route') == 'category_edit' %}
		Editer une catégorie
	{% endif %}

{% endblock %}


{% block body %}
	<div class="container mt-4">
		<h1>
			{% block bigTitle %}
				Éditer les biens
			{% endblock %}
		</h1>

		{{form_start(form)}}

		<div class="row">
			<div class="col-md-12">{{form_row(form.name)}}</div>
		</div>

		<button class="btn btn-primary">
			{% block createEdite %}
				A DEFINIR
			{% endblock %}
		</button>
		{{form_end(form)}}
	</div>
{% endblock %}
